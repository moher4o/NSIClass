@model AdminLinksServiceModel
@{
    ViewData["Title"] = "Добавяне на връзка";
}

<h4 class="text-center" style="color:azure;">Добавяне на връзка</h4>
<br />
<form method="post" asp-controller="Links" asp-action="AddSystem">
    <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" id="name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Link"></label>
                <input asp-for="Link" class="form-control" id="link" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="center-block text-center">
                <button type="submit" class="button save" id="send">Запис</button>
                <a class="button btncansel" asp-controller="Links" asp-action="AllLinks">Отказ</a>
            </div>

        </div>
    </div>

    <div class="col-md-3">
    </div>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
