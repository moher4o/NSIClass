@model RestoreUserViewModel

@{
    ViewData["Title"] = "Възстановяване на потребител";
}


<form method="post" asp-controller="Users" asp-action="UndeleteUser" asp-route-userId="@Model.UserId">
    <div class="center-block text-center">
        <h3 style="color:azure;">Сигурни ли сте, че искате да възстановите потребител: @Model.Name ?</h3>
        <br />
        <button type="submit" class="button save">Възстановяване</button>
        <a class="button btncansel" asp-area="Admin" asp-controller="Users" asp-action="Allusers">Отказ</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
